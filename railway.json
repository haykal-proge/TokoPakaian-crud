{
    "build": {
      "builder": "nixpacks",
      "buildCommand": "composer install --optimize-autoloader --no-dev && npm ci && npm run build"
    },
    "deploy": {
      "startCommand": "./start.sh",
      "healthcheckPath": "/",
      "healthcheckTimeout": 60,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    }
  }
